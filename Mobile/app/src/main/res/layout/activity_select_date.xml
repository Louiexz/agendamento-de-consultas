<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Bar with Logo and Bell -->
    <include
        android:id="@+id/HeaderBar"
        layout="@layout/header_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    
    <!-- Conteúdo dividido proporcionalmente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <include
            android:id="@+id/consultationTitle"
            layout="@layout/consultation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione o horário da consulta"
            android:textSize="18sp"
            android:padding="10dp" />

        <ProgressBar
            android:id="@+id/progressBarDate"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
        
        <!-- Lista ocupa 80% -->
        <ListView
            android:id="@+id/lvDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>
</LinearLayout>