
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/HeaderBar"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:text="ServiÃ§os" />

        <!-- Agendar Consulta Button -->
        <LinearLayout
            android:id="@+id/btnAgendar"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/card_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Agendar consulta"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:paddingLeft="5dp"
        android:text="Consultas" />

    <!-- Consultas Tipo -->
    <Button
        android:id="@+id/btnStatusConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="Filtrar Status" />
    
    <!-- Consultas Section -->
    <FrameLayout
        android:id="@+id/recycler_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/consultasAgendadas"
            layout="@layout/consult_agendadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
        
        <include
            android:id="@+id/consultasPendente"
            layout="@layout/consult_pendente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        
        <include
            android:id="@+id/consultasEmEspera"
            layout="@layout/consult_em_espera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        
        <include
            android:id="@+id/consultasCanceladas"
            layout="@layout/consult_canceladas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        
        <include
            android:id="@+id/consultasConcluidas"
            layout="@layout/consult_concluida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>